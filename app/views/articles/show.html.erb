<% cache ["recent_articles", @article.updated_at] do %>
  <div id="recent_articles">
    <h3>Recent Articles</h3>
    <ul>
    <% @recent_articles.each do |article| %>
      <% cache ["recent", article] do %>
        <li><%= link_to article.name, article %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
<% end %>
<% cache @article do %>
  <div id="article">
    <h1><%= @article.name %></h1>
    <%= @article.content %>
    <p>
      <%= link_to "Edit", edit_article_path %> |
      <%= link_to "Browse Articles", articles_path %>
    </p>

    <h2><%= pluralize(@article.cached_comment_count, "comment") %></h2>
    <div id="comments">
      <%= render @article.comments %>
    </div>
    <%= render "comments/form" %>
  </div>
<% end %>